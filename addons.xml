<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="BHSTV.repo" name="BHS TV Repo" version="1.0.0" provider-name="BHSTV">
    <extension point="xbmc.addon.repository" name="BHS TV Repo">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Baianobr123/bhstv.repo/main/repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Baianobr123/bhstv.repo/main/repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Baianobr123/bhstv.repo/main/repo/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>BHSTV REPO!!!!!</summary>
        <description>Instale meus addons através deste repositório.</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.video.bhstv" name="[B][COLOR white]BHS[/COLOR] [COLOR red]TV[/COLOR][/B]" version="1.0.0" provider-name="BHS">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>BHS TV - Filmes e Séries</summary>
        <description>Addon BHS TV para Kodi</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

</addons>